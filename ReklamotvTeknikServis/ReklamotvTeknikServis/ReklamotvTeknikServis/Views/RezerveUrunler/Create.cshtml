@model ReklamotvTeknikServis.ReserveUrunler

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <span class="caption-subject bold uppercase"> Rezerve Tanımla</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group form-md-line-input">
                                @Html.DropDownList("UrunStokId", null, String.Empty, new { @class = "form-control" })
                                <label for="form_control_1">Stok Adı</label>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.TextAreaFor(model => model.ReserveUrunAdet, new { @class = "form-control" })
                                <label for="form_control_1">Rezerve Adet</label>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.DropDownList("ReserveYapilanFirma", null, String.Empty, new { @class = "form-control" })
                                <label for="form_control_1">Rezervasyon Firma</label>
                            </div>
                        </div>
                        <div class="form-actions noborder">
                            <input type="submit" value="Kaydet" class="btn blue" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- END SAMPLE FORM PORTLET-->
            <!-- BEGIN SAMPLE FORM PORTLET-->

        </div>
    </div>
}

