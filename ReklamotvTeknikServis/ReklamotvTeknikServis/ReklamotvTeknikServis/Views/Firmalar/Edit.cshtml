@model ReklamotvTeknikServis.Firmalar

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.FirmaId)
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <span class="caption-subject bold uppercase"> Ürün Ekle</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group form-md-line-input">
                                @Html.TextBoxFor(model => model.FirmaAdi, new { @class = "form-control" })
                                <label for="form_control_1">Firma Adı</label>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.TextBoxFor(model => model.FirmaAdresi, new { @class = "form-control" })
                                <label for="form_control_1">Ürün Kodu</label>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.TextBoxFor(model => model.FirmaTelNo, new { @class = "form-control" })
                                <label for="form_control_1">Firma Telefon Numarası</label>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.TextBoxFor(model => model.FirmaAlınanSatilan, new { @class = "form-control" })
                                <label for="form_control_1">Firma Durum</label>
                            </div>
                        </div>
                        <div class="form-actions noborder">
                            <input type="submit" value="Kaydet" class="btn blue" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- END SAMPLE FORM PORTLET-->
            <!-- BEGIN SAMPLE FORM PORTLET-->

        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

