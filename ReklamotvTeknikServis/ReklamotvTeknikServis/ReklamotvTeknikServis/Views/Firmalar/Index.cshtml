@model IEnumerable<ReklamotvTeknikServis.Firmalar>

@{
    ViewBag.Title = "Index";
    int rowcount = 0;
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box purple">
            <div class="portlet-title">
                <div class="caption">
                    Ürünler
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                </th>
                                <th>
                                    Firma Adı
                                </th>
                                <th>
                                    Firma Adresi
                                </th>
                                <th>
                                    Firma Telefon Numarası
                                </th>
                                <th>
                                    Firma Durum
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{
                                            rowcount++;
                                        }
                                        @rowcount
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirmaAdi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirmaAdresi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirmaTelNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirmaAlınanSatilan)
                                    </td>
                                    <td>
                                        <span class="label label-sm label-danger">

                                            @Html.ActionLink("Sil", "Delete", new { id = item.FirmaId }, new { @style = "color:white" })
                                        </span>
                                        <span class="label label-sm label-warning">
                                            @Html.ActionLink("Düzenle", "Edit", new { id = item.FirmaId }, new { @style = "color:white" })
                                        </span>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
