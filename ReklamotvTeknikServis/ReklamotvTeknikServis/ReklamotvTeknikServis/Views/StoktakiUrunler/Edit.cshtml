@model ReklamotvTeknikServis.StoktakiUrunler

@{
    ViewBag.Title = "Edit";
   
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
     @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.UrunStok_id)
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <span class="caption-subject bold uppercase"> Stok Ürün Ekle</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group form-md-line-input">
                                @Html.TextBoxFor(model => model.UrunAlisFiyati, new { @class = "form-control" })
                                <label for="form_control_1">Ürün Alış Fiyatı</label>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.DropDownList("UrunTur_id", null, String.Empty, new { @class = "form-control" })
                                <label for="form_control_1">Ürün Tür</label>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.TextBoxFor(model => model.UrunAdi, new { @class = "form-control" })
                                <label for="form_control_1">Ürün Adı</label>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.TextBoxFor(model => model.UrunAdet, new { @class = "form-control" })
                                <label for="form_control_1">Ürün Adı</label>
                            </div>
                            <div class="form-group form-md-line-input">
                                @Html.TextBoxFor(model => model.UrunAdet, new { @class = "form-control" })
                                <label for="form_control_1">Adet</label>
                            </div>
                        </div>
                        <div class="form-actions noborder">
                            <input type="submit" value="Kaydet" class="btn blue" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- END SAMPLE FORM PORTLET-->
            <!-- BEGIN SAMPLE FORM PORTLET-->

        </div>
    </div>
}

